<!DOCTYPE html>
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")

    = render partial: "layouts/sharing"

    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"
      = javascript_include_tag "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"
    = csrf_meta_tags

  %body(class="#{"admin-controller" if controller.class.name.deconstantize == "Admin"} #{action_name} #{controller_name} #{controller_name}-#{action_name}")
    = render partial: "layouts/analytics"
    .wrapper-outer
      .wrapper-inner
        = render partial: "layouts/navbar"
        = render partial: "layouts/flash"
        = yield
      = render partial: "layouts/footer"
