.container
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 New/Edit User
        .panel-body
          = render partial: "form"
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 Users
        %table.table.table-bordered.table-hover
          %thead
            %tr
              %th ID
              %th Admin
              %th Email
              %th First Name
              %th Last Name
              %th Created At
              %th
          %tbody
            - @users.each do |user|
              %tr
                %td= user.id
                %td= user.admin ? "Yes" : "No"
                %td= user.email
                %td= user.first_name
                %td= user.last_name
                %td= user.created_at.strftime("%m/%d/%y %I:%M %p")
                %td
                  = link_to "Edit", edit_admin_user_path(user)
                  &vert;
                  = link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete #{user.name}?" }
