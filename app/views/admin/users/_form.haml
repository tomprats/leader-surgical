= form_for [:admin, @user], html: { class: "form-horizontal" } do |f|
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :admin
          Administrator?
  .form-group
    = f.label :email, class: "col-sm-2 control-label"
    .col-sm-10
      = f.email_field :email, placeholder: "Email", class: "form-control"
  .form-group
    = f.label :first_name, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :first_name, placeholder: "First Name", class: "form-control"
  .form-group
    = f.label :last_name, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :last_name, placeholder: "Last Name", class: "form-control"
  - if @user.id
    .form-group
      = f.label :password, class: "col-sm-2 control-label"
      .col-sm-10
        = f.password_field :password, placeholder: "Password (Optional)", class: "form-control"
  - else
    .form-group
      = f.label :password, class: "col-sm-2 control-label"
      .col-sm-10
        = f.password_field :password, placeholder: "Password", class: "form-control"
    .form-group
      = f.label :password_confirmation, class: "col-sm-2 control-label"
      .col-sm-10
        = f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
