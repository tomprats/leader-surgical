- @specialties ||= Specialty.all
= form_for [:admin, @doctor], html: { class: "form-horizontal" } do |f|
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :active
          Active?
  .form-group
    = f.label :specialty_id, class: "col-sm-2 control-label"
    .col-sm-10
      = f.select :specialty_id, options_from_collection_for_select(@specialties, :id, :name, @doctor.specialty_id), { prompt: "None" }, class: "form-control"
  .form-group
    = f.label :image, class: "col-sm-2 control-label"
    .col-sm-10
      = f.file_field :image, class: "form-control"
  .form-group
    = f.label :first_name, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :first_name, placeholder: "First Name", class: "form-control"
  .form-group
    = f.label :last_name, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :last_name, placeholder: "Last Name", class: "form-control"
  .form-group
    = f.label :kind, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :kind, placeholder: "Kind", class: "form-control"
  .form-group
    = f.label :description, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :description, placeholder: "Description", class: "form-control"
  .form-group
    = f.label :bio, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :bio, placeholder: "Bio", class: "form-control"
  .form-group
    = f.label :associations, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :associations, placeholder: "Associations", class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
