.container
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 New/Edit Visit
        .panel-body
          = render partial: "form"
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 Specialties
        %table.table.table-bordered.table-hover
          %thead
            %tr
              %th ID
              %th Active
              %th Parent
              %th Name
              %th File
              %th Description
              %th Created At
              %th
          %tbody
            - @visits.each do |visit|
              %tr
                %td= visit.id
                %td= visit.active ? "Yes" : "No"
                %td= visit.parent ? visit.parent.name : "None"
                %td= visit.name
                %td= link_to("View", visit.file, target: :_blank) unless visit.file.blank?
                %td= visit.description
                %td= visit.created_at.strftime("%m/%d/%y %I:%M %p")
                %td
                  = link_to "Edit", edit_admin_visit_path(visit)
                  &vert;
                  = link_to "Delete", admin_visit_path(visit), method: :delete, data: { confirm: "Are you sure you want to delete #{visit.name}?" }
