= form_for [:admin, @visit], html: { class: "form-horizontal" } do |f|
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :active
          Active?
  .form-group
    = f.label :rank, class: "col-sm-2 control-label"
    .col-sm-10
      = f.number_field :rank, placeholder: "Rank", class: "form-control"
  .form-group
    = f.label :parent_id, class: "col-sm-2 control-label"
    .col-sm-10
      = f.select :parent_id, options_from_collection_for_select(@visits, :id, :name, @visit.parent_id), { prompt: "None" }, class: "form-control"
  .form-group
    = f.label :name, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :name, placeholder: "Name", class: "form-control"
  .form-group
    = f.label :file, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :file, placeholder: "File", class: "form-control"
  .form-group
    = f.label :description, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :description, placeholder: "Description", class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
