- @doctors ||= Doctor.all
- @specialties ||= Specialty.all
- @body_parts ||= BodyPart.all
= form_for [:admin, @procedure], html: { class: "form-horizontal" } do |f|
  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :active
          Active?
  .form-group
    = f.label :doctor_id, class: "col-sm-2 control-label"
    .col-sm-10
      = f.collection_select :doctor_id, @doctors, :id, :name, { prompt: "None" }, class: "form-control"
  .form-group
    = f.label :specialty_id, class: "col-sm-2 control-label"
    .col-sm-10
      = f.collection_select :specialty_id, @specialties, :id, :name, { prompt: "None" }, class: "form-control"
  .form-group
    = f.label :body_part_id, class: "col-sm-2 control-label"
    .col-sm-10
      = f.collection_select :body_part_id, @body_parts, :id, :name, { prompt: "None" }, class: "form-control"
  .form-group
    = f.label :name, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :name, placeholder: "Name", class: "form-control"
  .form-group
    = f.label :link, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :link, placeholder: "Link", class: "form-control"
  .form-group
    = f.label :description, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :description, placeholder: "Description", class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
