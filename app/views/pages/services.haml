.container
  .anchor-row.heading
    .right-column
      %p Information about our procedures can be found here. Search by specialty, doctor, or procedure.
  .anchor-row.search
    .left-column
      .row
        .col-xs-6.col-sm-4.col-md-12
          %h3
            Search By
            %br
            %b Doctor
          %ul
            - @doctors.each do |doctor|
              %li= link_to doctor.name, "#", class: "open-sesame", data: { id: doctor.id, type: "doctor" }
        .col-xs-6.col-sm-4.col-md-12
          %h3
            Search By
            %br
            %b Specialty
          %ul
            - @specialties.each do |specialty|
              %li= link_to specialty.name, "#", class: "open-sesame", data: { id: specialty.id, type: "specialty" }
        .col-xs-6.col-sm-4.col-md-12
          %h3
            Search By
            %br
            %b Procedure
          %ul
            - @procedures.each do |procedure|
              %li= link_to procedure.name, "#", class: "open-sesame", data: { id: procedure.id, type: "procedure" }
    .right-column
      .row
        .col-sm-4
          = image_tag "person.png", class: "person-img img-responsive", usemap: "#personmap"
          %map(name="personmap")
            - @body_parts.each do |body_part|
              %area(data-id="#{body_part.id}" data-color="#{body_part.color}" shape="circle" coords="#{body_part.coords}" href="#")
        .col-sm-8
          .box
            .procedure
              %p.instructions Click the part of the body you want to learn about.
              .body-part.hidden
                .row
                  .col-md-12
                    %h2.text-center.name
                    %p
                      %b Doctor:
                      = link_to "", "#", class: "doctor open-sesame", data: { id: 0, type: "doctor" }
                    %p
                      %b Procedures:
                      %span.procedures
                      = link_to "", "#", class: "procedure open-sesame hidden", data: { id: 0, type: "procedure" }
                    %p.description
